<h1>My Blog</h1>
<% @blog_posts.each do |blog_post| %>
  <h2><%= link_to blog_post.title, blog_post %></h2>
  <% if user_signed_in? %>
    <div class="p-2 rounded <%= blog_post_status_bg_color(blog_post)%> text-gray-900"><%= blog_post_status_text(blog_post) %></div>
  <% end %>
  <p><%= blog_post.content %></post>
<% end%>
